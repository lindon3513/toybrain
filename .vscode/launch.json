{
    "version": "0.2.0",
    "configurations": [
        { 
            "name": "Chrome", 
            "type": "chrome", 
            "request": "launch", 
            "url": "http://localhost:3000", 
            "webRoot": "${workspaceRoot}/docker-nginx/chatting/src", 
            "userDataDir": "${workspaceRoot}/.chrome", 
            "sourceMapPathOverrides": { 
                "webpack:///src/*": "${webRoot}/*" 
            } 
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",            
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",            
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}